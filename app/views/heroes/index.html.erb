<p id="notice"><%= notice %></p>

<h1>Heroes</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Badge template</th>
      <th>Issued at</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= hero.recipient_email %></td>
        <td><%= hero.first_name %></td>
        <td><%= hero.last_name %></td>
        <td><%= BadgeTemplate.find(hero.badge_template_id)&.name %></td>
        <td><%= hero.issued_at %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

