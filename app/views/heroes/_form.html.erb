<%= form_with(model: hero) do |form|%>
  <% if hero.errors.any? %>
    <div>
      <h2><%= pluralize(hero.errors.count, "error")%></h2>
        <ul>
          <% hero.errors.full_messages.each do |message|%>
            <li><%= message%></li>
          <% end %>
        </ul>
    </div>
  <% end%>

  <div class="field">
    <%= form.label :recipient_email %>
    <%= form.text_feild :recipient_email %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_feild :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_feild :last_name %>
  </div>

    <div class="field">
    <%= form.label :badge_template_id %>
    <%= form.collection_select :badge_template_id, BadgeTemplate.order(:name), :id, :name %>
  </div>

  <div class="field">
    <%= form.label :issued_at %>
    <%= form.text_field :issued_at, :value => DateTime.now  %>
  </div>
  
<% end %>
